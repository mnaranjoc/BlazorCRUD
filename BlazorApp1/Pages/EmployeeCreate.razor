@page "/employee/create"
@inject BlazorApp1.Data.IEmployeeService EmployeeService
@inject NavigationManager Navigation

<h3>Create Employee</h3>

<EditForm Model="employee" OnSubmit="SubmitForm">
    <div class="form-group">
        <label>Name</label>
        <InputText id="name" class="form-control" name="name" @bind-Value="employee.Name"></InputText>
    </div>
    <div class="form-group">
        <a href="/employees" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</EditForm>

@code {
    BlazorApp1.Data.Employee employee = new();

    private void SubmitForm()
    {
        EmployeeService.AddEmployee(employee);
        Navigation.NavigateTo("/employees");
    }
}
